{
    "tasks": [
        {
            "type": "shell",
            "label": "cmake_build",
            "command": "cmake",
            "args": [
                "--build",
                "--preset",
                "clang-debug-build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Runs make"
        },
        {
            "type": "shell",
            "label": "cmake_build_and_run",
            "command": "${workspaceFolder}/build/RAY",
            "args": [
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Runs builded program",
            "dependsOn": ["cmake_build"]
        },
        {
            "type": "shell",
            "label": "CppCheck",
            "command": "cppcheck",
            "args": [
                "-q",
                "-j",
                "4",
                "-Iheaders",
                "--std=c++23",
                "--enable=all",
                "./src",
                "./headers"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "detail": "Runs static analysis",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CTest",
            "command": "ctest",
            "args": [
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "detail": "Runs tests",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}