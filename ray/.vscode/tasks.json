{
    "tasks": [
        {
            "type": "shell",
            "label": "cmake_macos_configure",
            "command": "cmake",
            "args": [
                "cmake",
                "--preset",
                "clang-debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Runs cmake configuration for macos using clang compiler (cmake -S . -B ./build -DCMAKE_BUILD_TYPE=Debug -DCMAKE_C_COMPILER=/usr/bin/clang -DCMAKE_CXX_COMPILER=/usr/bin/clang++)"
        },
        {
            "type": "shell",
            "label": "cmake_build",
            "command": "cmake",
            "args": [
                "--build",
                "--preset",
                "clang-debug-build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Runs make"
        },
        {
            "type": "shell",
            "label": "CppCheck",
            "command": "cppcheck",
            "args": [
                "-q",
                "-j",
                "4",
                "-Iheaders",
                "--std=c++23",
                "--enable=all",
                "./src",
                "./headers"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "detail": "Runs static analysis",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CTest",
            "command": "ctest",
            "args": [
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "detail": "Runs tests",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}